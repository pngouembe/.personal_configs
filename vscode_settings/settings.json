{
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "git.suggestSmartCommit": false,
    "window.zoomLevel": 1,
    "git.confirmSync": false,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.titleMode": "sequence",
    "editor.renderWhitespace": "all",
    "files.trimTrailingWhitespace": true,
    "editor.fontFamily": "'Fira Code'",
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "'MesloLGS NF'",
    "editor.bracketPairColorization.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.definitionLinkOpensInPeek": true,
    "editor.guides.bracketPairs": true,
    "editor.linkedEditing": true,
    "editor.renderLineHighlight": "all",
    "editor.tabCompletion": "on",
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "indent",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.formatOnType": true,
    "diffEditor.codeLens": true,
    "editor.minimap.size": "fill",
    "editor.suggest.insertMode": "replace",
    "editor.suggest.showStatusBar": true,
    "files.autoGuessEncoding": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "workbench.colorTheme": "Community Material Theme Ocean High Contrast",
    "workbench.tree.indent": 12,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "breadcrumbs.symbolSortOrder": "type",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.openSideBySideDirection": "down",
    "workbench.editor.revealIfOpen": true,
    "workbench.settings.openDefaultKeybindings": true,
    "workbench.settings.openDefaultSettings": true,
    "window.title": "${dirty}${remoteName}${separator}${separator}${rootName}${separator}${activeEditorShort}",
    "explorer.incrementalNaming": "smart",
    "explorer.openEditors.sortOrder": "alphabetical",
    "explorer.openEditors.visible": 10,
    "search.collapseResults": "auto",
    "search.showLineNumbers": true,
    "scm.alwaysShowActions": true,
    "scm.alwaysShowRepositories": true,
    "scm.providerCountBadge": "auto",
    "terminal.integrated.tabs.hideCondition": "never",
    "terminal.integrated.tabs.showActions": "always",
    "terminal.integrated.tabs.showActiveTerminal": "always",
    "problems.showCurrentInStatus": true,
    "workbench.iconTheme": "eq-material-theme-icons-darker",
    "editor.semanticTokenColorCustomizations": {
        "enabled": true
    },
    "[ansible]": {
        "gitlens.codeLens.scopes": [
            "document"
        ],
        "editor.tabSize": 2
    }
}
